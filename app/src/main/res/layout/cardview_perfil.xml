<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardBackgroundColor="#ffffff"
    android:textAlignment="center"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/llPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/llPerfilP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:baselineAligned="true"
            android:padding="10dp">

            <!--<LinearLayout
                android:id="@+id/llMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margenEntero"
                android:background="#ffffff"
                android:elevation="4dp">-->

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/civPerfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/confucio"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#acacac"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/ivPerfilDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvPerfilFavoritos"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Confucio"
                    android:layout_marginTop="10dp"
                    android:textSize="28dp"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>